{
    "version": 3,
    "configurePresets": [
        {
            "name": "Debug",
            "hidden": false,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "binaryDir": "${sourceDir}/build_debug"
        },
        {
            "name": "Release",
            "hidden": false,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "binaryDir": "${sourceDir}/build_release"
        }
    ],
    "buildPresets": [
        {
            "name": "Build debug",
            "hidden": false,
            "configurePreset": "Debug",
            "configuration": "Debug",
            "jobs": 4,
            "targets": [
                "sfml-spheres",
                "simulation-test"
            ]
        },
        {
            "name": "Build release",
            "hidden": false,
            "configurePreset": "Release",
            "configuration": "Release",
            "jobs": 4,
            "targets": [
                "sfml-spheres",
                "simulation-test"
            ]
        }
    ]
}